<div class="row">
  <% @categories.each do |category| %>
    <div class="columns small-4">
      <div class="sit-image">
        <%= link_to image_tag(category.image),
            category_path(category)%>
      </div>
      <div class="hidden-text">
        <%= link_to (category.name),
            category_path(category)%>
      </div>
    </div>
  <% end %>
</div>
