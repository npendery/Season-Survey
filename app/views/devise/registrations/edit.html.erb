<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "text-field" %>
    <% if resource.errors[:email].present? %>
      <%= content_tag :span, class: 'error-explanation' do %>
        <%= "Email " + resource.errors[:email].join(", ") %>
      <% end %>
    <% end %>
  </div>
  <br>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, value: current_user.username , autofocus: true, class: "text-field"  %>
  </div>
  <br>
  <div class="field">
    <%= f.label :profile_photo, "Profile Photo" %>
    <%= f.file_field :profile_photo %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
  <br>
  <div class="field">
    <%= f.label :password %> <em>(leave blank if you don't want to change it)</em>
    <%= f.password_field :password, autocomplete: "off", class: "text-field" %>
    <% if resource.errors[:password].present? %>
      <%= content_tag :span, class: 'error-explanation' do %>
        <%= "Password " + resource.errors[:password].join(", ") %>
      <% end %>
    <% end %>
  </div>
  <br>
  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "text-field" %>
    <% if resource.errors[:password_confirmation].present? %>
      <%= content_tag :span, class: 'error-explanation' do %>
        <%= "Password Confirmation " + resource.errors[:password_confirmation].join(", ") %>
      <% end %>
    <% end %>
  </div>
  <br>
  <div class="field">
    <%= f.label :current_password %> <em>(we need your current password to confirm your changes)</em>
    <%= f.password_field :current_password, autocomplete: "off", class: "text-field" %>
    <% if resource.errors[:current_password].present? %>
      <%= content_tag :span, class: 'error-explanation' do %>
        <%= "Current Password " + resource.errors[:current_password].join(", ") %>
      <% end %>
    <% end %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Update", class: "submit-form" %>
  </div>
<% end %>
<br>
<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "submit-form" %></p>
