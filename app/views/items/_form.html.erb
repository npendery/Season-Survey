<%= form_for @item do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<br>
	<%= f.label :description %>
	<%= f.text_field :description %>
	<br>
	<br>
	<%= f.label :purchase_url, "Where to Purchase" %>
	<%= f.text_field :purchase_url %>
	<br>
	<br>
	<%= f.label :image, 'Image URL' %>
	<%= f.text_field :image %>
	<br>
	<br>
	<%= f.label :category_id %>
	<%= f.collection_select(:category_id, Category.all, :id, :name) %>
	<br>
	<br>
	<%= f.submit "Submit" %>
<% end %>
