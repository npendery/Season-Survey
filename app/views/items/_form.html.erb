<div class="container">
	<%= form_for @item do |f| %>
		<div class="row">
			<div class="field columns small-3">
				<%= f.label :name %>
				<%= f.text_field :name %>
			</div>
		</div>
				<br>
				<br>
		<div class="row">
			<div class="field columns small-6">
				<%= f.label :description %>
				<%= f.text_area :description %>
			</div>
		</div>
				<br>
				<br>
		<div class="row">
			<div class="field columns small-6">
				<%= f.label :purchase_url, "Where to Purchase" %>
				<%= f.text_field :purchase_url %>
			</div>
		</div>
				<br>
				<br>
		<div class="row">
			<div class="field columns small-6">
				<%= f.label :image, 'Image URL' %>
				<%= f.text_field :image %>
			</div>
		</div>
				<br>
				<br>
		<div class="row">
			<div class="field columns small-2">
				<%= f.label :category_id %>
				<%= f.collection_select(:category_id, Category.all, :id, :name, prompt: true) %>
			</div>
		</div>
				<br>
				<br>
		<div class="row">
			<%= f.submit "Submit" %>
		</div>
	<% end %>
</div>
