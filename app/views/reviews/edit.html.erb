<h1>Edit Your Review</h1>

  <%= form_for [@item, @review] do |f| %>
    <%= f.label :rating %>
    <%= f.collection_radio_buttons :rating, Review::RATINGS, :to_i, :to_i %>
    <br>
    <br>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <br>
    <br>
    <%= f.submit "Submit Edits" %>
  <% end %>
