<h1>Add a Review</h1>

<div class="container">
  <%= form_for [@item, @review] do |f| %>
    <div class="row">
      <div class="field columns small-3">
        <%= f.label :rating %>
        <%= f.collection_radio_buttons :rating, Review::RATINGS, :to_i, :to_i %>
      </div>
    </div>
    <div class="row">
      <div class="field columns small-3">
        <%= f.label :description %>
        <%= f.text_field :description %>
      </div>
    </div>
    <div class="row">
      <div class="field columns small-3">
        <%= f.submit "Create Review" %>
      </div>
    </div>
  <% end %>
</div>
